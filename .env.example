# Database Configuration
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NO_SSL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# Authentication
JWT_SECRET=your-jwt-secret-here
ADMIN_PASSWORD_HASH=your-password-hash-here

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# API Configuration
NEXT_PUBLIC_API_URL=https://www.tandemdaily.com

# Logging Configuration
# Log levels: DEBUG, INFO, WARN, ERROR, NONE
# Production default: ERROR (only critical errors logged)
# Development default: DEBUG (all logs visible)
NEXT_PUBLIC_LOG_LEVEL=ERROR

# Enable debug logs in production (not recommended, use only for troubleshooting)
NEXT_PUBLIC_ENABLE_DEBUG_LOGS=false

# Log sampling rate for high-frequency events (0.0 to 1.0)
# 1.0 = log all events, 0.1 = log 10% of events
LOG_SAMPLING_RATE=1.0

# Vercel KV (Redis)
KV_URL=
KV_REST_API_URL=
KV_REST_API_TOKEN=
KV_REST_API_READ_ONLY_TOKEN=

# Environment
NODE_ENV=production

# AI Puzzle Generation (Optional)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
AI_MODEL=claude-3-5-sonnet-20241022
AI_GENERATION_ENABLED=true