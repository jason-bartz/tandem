# Database Configuration
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NO_SSL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# Authentication
JWT_SECRET=your-jwt-secret-here
ADMIN_PASSWORD_HASH=your-password-hash-here

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# API Configuration
NEXT_PUBLIC_API_URL=https://www.tandemdaily.com

# Logging Configuration
# Log levels: DEBUG, INFO, WARN, ERROR, NONE
# Production default: ERROR (only critical errors logged)
# Development default: DEBUG (all logs visible)
NEXT_PUBLIC_LOG_LEVEL=ERROR

# Enable debug logs in production (not recommended, use only for troubleshooting)
NEXT_PUBLIC_ENABLE_DEBUG_LOGS=false

# Log sampling rate for high-frequency events (0.0 to 1.0)
# 1.0 = log all events, 0.1 = log 10% of events
LOG_SAMPLING_RATE=1.0

# Vercel KV (Redis)
KV_URL=
KV_REST_API_URL=
KV_REST_API_TOKEN=
KV_REST_API_READ_ONLY_TOKEN=

# Environment
NODE_ENV=production

# AI Puzzle Generation (Optional)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
AI_MODEL=claude-sonnet-4-5-20250929
AI_GENERATION_ENABLED=true

# Daily Alchemy AI Configuration (Vercel AI Gateway)
# Provider mode: 'gateway' (Llama + Claude fallback), 'llama-only', 'claude-only'
ALCHEMY_AI_PROVIDER=gateway
# Vercel AI Gateway API Key (get from Vercel dashboard)
AI_GATEWAY_API_KEY=
# Primary model for Daily Alchemy (Llama 4 via Together AI through gateway)
ALCHEMY_PRIMARY_MODEL=together/meta-llama/Llama-4-Maverick-17B-128E-Instruct-FP8
# Fallback model (Claude via gateway)
ALCHEMY_FALLBACK_MODEL=anthropic/claude-sonnet-4

# Email Notifications (Resend)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx
# Email address to receive feedback notifications
FEEDBACK_NOTIFICATION_EMAIL=admin@tandemdaily.com
# Sender email (must be from a verified domain in Resend)
FEEDBACK_FROM_EMAIL=notifications@tandemdaily.com

# Discord Notifications
# Webhook URL for sending payment/subscription notifications
# Create a webhook in Discord: Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=