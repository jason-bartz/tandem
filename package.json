{
  "name": "tandem-game",
  "version": "1.6.4",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:web": "next build",
    "build:ios": "BUILD_TARGET=capacitor next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,json,css}'",
    "format:check": "prettier --check 'src/**/*.{js,jsx,json,css}'",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "test:coverage": "jest --coverage",
    "prepare": "husky",
    "hash-password": "node scripts/hash-password.js",
    "seed": "node scripts/seed-puzzles.js",
    "migrate:hints": "node scripts/migrate-hints.js",
    "cap:add": "cap add ios",
    "cap:sync": "cap sync",
    "cap:open": "cap open ios",
    "ios:dev": "npm run build:ios && npm run cap:sync && npm run cap:open",
    "ios:build": "npm run build:ios && npm run cap:sync",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "audit:ci": "npm audit --audit-level=moderate --json",
    "security:check": "npm run audit && npm run lint"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@capacitor/app": "^5.0.6",
    "@capacitor/browser": "^5.2.1",
    "@capacitor/core": "^5.5.1",
    "@capacitor/haptics": "^5.0.6",
    "@capacitor/ios": "^5.5.1",
    "@capacitor/keyboard": "^5.0.6",
    "@capacitor/local-notifications": "^5.0.6",
    "@capacitor/preferences": "^5.0.6",
    "@capacitor/share": "^5.0.6",
    "@capacitor/splash-screen": "^5.0.6",
    "@capacitor/status-bar": "^5.0.6",
    "@openforge/capacitor-game-connect": "^5.0.2",
    "@vercel/kv": "^1.0.1",
    "bcryptjs": "^2.4.3",
    "canvas-confetti": "^1.9.3",
    "chart.js": "^4.5.0",
    "clsx": "^2.1.0",
    "cordova-plugin-purchase": "^13.11.1",
    "date-fns": "^3.0.0",
    "date-fns-tz": "^3.2.0",
    "framer-motion": "^12.23.24",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.2.32",
    "node-cron": "^4.2.1",
    "react": "^18",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18",
    "redis": "^5.8.2",
    "uuid": "^13.0.0",
    "zod": "^3.25.76",
    "zustand": "^4.4.7"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@capacitor/cli": "^5.5.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.3",
    "playwright": "^1.55.1",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.3.0"
  }
}
